generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String?
  phone_number      String?
  email             String?
  googleId          String?
  authProvider      String   @default("otp")
  avatar            String?
  notificationToken String?
  ratings           Float    @default(0)
  totalRides        Float    @default(0)
  cratedAt          DateTime @default(now())
  updatedAt         DateTime @updatedAt
  rides             rides[]  @relation("UserRides")

  @@index([phone_number])
}

enum VehicleType {
  Car
  Motorcycle
  CNG
}

model driver {
  id                  String      @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  country             String
  phone_number        String      @unique
  email               String      @unique
  vehicle_type        VehicleType
  registration_number String      @unique
  registration_date   String
  driving_license     String
  vehicle_color       String?
  rate                String
  password            String
  avatar              String?
  notificationToken   String?
  ratings             Float       @default(0)
  totalEarning        Float       @default(0)
  walletBalance       Float       @default(0)
  walletHasGoneNegative Boolean   @default(false)
  totalRides          Float       @default(0)
  pendingRides        Float       @default(0)
  cancelRides         Float       @default(0)
  status              String      @default("inactive")
  accountStatus       String      @default("pending")
  reviewedAt          DateTime?
  rejectionReason     String?
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  rides               rides[]     @relation("DriverRides")
  walletTransactions  walletTransaction[] @relation("DriverTransactions")
}

model rides {
  id                      String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                  String   @db.ObjectId
  driverId                String   @db.ObjectId
  charge                  Float
  currentLocationName     String
  destinationLocationName String
  distance                String
  status                  String
  rating                  Float?
  user                    user     @relation("UserRides", fields: [userId], references: [id])
  driver                  driver   @relation("DriverRides", fields: [driverId], references: [id])
  cratedAt                DateTime @default(now())
  updatedAt               DateTime @updatedAt

  // Index for fast race condition checks (userId + status + cratedAt)
  @@index([userId, status, cratedAt])
}

model admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  walletTransactions walletTransaction[] @relation("AdminTransactions")
}

model walletTransaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  driverId    String   @db.ObjectId
  adminId     String?  @db.ObjectId
  amount      Float
  balanceBefore Float
  balanceAfter  Float
  createdAt   DateTime @default(now())
  driver      driver   @relation("DriverTransactions", fields: [driverId], references: [id])
  admin       admin?   @relation("AdminTransactions", fields: [adminId], references: [id])

  @@index([driverId])
  @@index([adminId])
  @@index([createdAt])
}